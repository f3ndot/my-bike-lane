- model_class = Violator
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:license) + ':'
  %br
  = @violator.license
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @violator.description
%p
  %strong= model_class.human_attribute_name(:organization_id) + ':'
  %br
  = @violator.organization_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), violators_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_violator_path(@violator), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), violator_path(@violator), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
