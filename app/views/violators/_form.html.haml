= simple_form_for @violator, :html => { :class => 'form-horizontal' } do |f|
  = f.input :license
  = f.input :description, :input_html => {:class => "span9", :rows => 5}
  = f.association :organization
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), violators_path, :class => 'btn'
