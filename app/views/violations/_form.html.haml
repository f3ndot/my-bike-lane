= form_for @violation do |f|
  - if @violation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@violation.errors.count, "error")} prohibited this violation from being saved:"
      %ul
        - @violation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :violator_id
    = f.number_field :violator_id
  .actions
    = f.submit 'Save'
