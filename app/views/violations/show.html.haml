- model_class = Violation
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @violation.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @violation.description
%p
  %strong= model_class.human_attribute_name(:address) + ':'
  %br
  = @violation.address
%p
  %strong= model_class.human_attribute_name(:violator_id) + ':'
  %br
  = @violation.violator_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), violations_path, :class => 'btn'
  - if can? :update, @violation
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_violation_path(@violation), :class => 'btn'
  - if can? :destroy, @violation
    = link_to t('.destroy', :default => t("helpers.links.destroy")), violation_path(@violation), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
