- model_class = Announcement
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:message) + ':'
  %br
  = @announcement.message
%p
  %strong= model_class.human_attribute_name(:starts_at) + ':'
  %br
  = @announcement.starts_at
%p
  %strong= model_class.human_attribute_name(:ends_at) + ':'
  %br
  = @announcement.ends_at

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), announcements_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_announcement_path(@announcement), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), announcement_path(@announcement), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
