= simple_form_for @announcement, :html => { :class => 'form-horizontal' } do |f|
  = f.input :message
  = f.input :starts_at
  = f.input :ends_at
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), announcements_path, :class => 'btn'
