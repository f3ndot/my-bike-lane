- if Announcement.current(cookies.signed[:hidden_announcement_ids]).count > 0
  .alert.alert-info.announcement
    .container
      - Announcement.current(cookies.signed[:hidden_announcement_ids]).each do |a|
        .announcement-text
          = link_to "Ã—", hide_announcement_path(a), :class => "close", :title => "Hide Announcement", :rel => "bottom-tooltip"
          = a.message.html_safe

%header.container
  .navbar
    .navbar-inner
      %a.brand{href:"/"} MyBikeLane Toronto
      %ul.nav
        %li
          %a{href: "/"} Home
        %li
          = link_to "Submit a Violation", new_violation_path
        %li
          = link_to "Report to Police", '/page/report-sherbourne-violations-to-police'
      %ul.nav.pull-right
        - if user_signed_in?
          %li.dropdown
            %a{href: "#", class: "dropdown-toggle", data: {toggle: "dropdown"}}
              = image_tag avatar_url(current_user, 20), {class: "avatar-url"}
              = current_user.display_name
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Edit Profile", edit_user_registration_path
              - if current_user.admin?
                %li= link_to "<i class='icon-star'></i>Announcements".html_safe, announcements_path
                %li= link_to "<i class='icon-star'></i>Pages".html_safe, pages_path
              %li.divider
              %li= link_to "Logout", destroy_user_session_path, method: :delete
        - else
          %li
            = link_to "Login", new_user_session_path
          %li{class: "divider-vertical"}
          %li
            = link_to "Sign Up", new_user_registration_path
