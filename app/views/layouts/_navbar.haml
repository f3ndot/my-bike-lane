- if Announcement.current.count > 0
  .alert.alert-info.announcement
    .container
      %button{:type => "button", :class => "close", :data => {:dismiss => "alert"}} Ã—
      %strong Heads Up!
      - Announcement.current.each do |a|
        = a.message

%header.container
  .navbar
    .navbar-inner
      %a.brand{href:"/"} MyBikeLane
      %ul.nav
        %li
          %a{href: "/"} Home
        %li
          = link_to "Submit a Violation", new_violation_path
      %ul.nav.pull-right
        - if user_signed_in?
          %li.dropdown
            %a{href: "#", class: "dropdown-toggle", data: {toggle: "dropdown"}}
              = image_tag avatar_url(current_user, 20), {class: "avatar-url"}
              = current_user.display_name
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Edit Profile", edit_user_registration_path
              %li.divider
              %li= link_to "Logout", destroy_user_session_path, method: :delete
        - else
          %li
            = link_to "Login", new_user_session_path
          %li{class: "divider-vertical"}
            = link_to "Sign Up", new_user_registration_path
